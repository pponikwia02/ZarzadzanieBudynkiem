<Page x:Class="IO.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IO"
      xmlns:vm ="clr-namespace:IO"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="LoginPage">
    <Page.DataContext>
        <vm:LoginViewModel />
    </Page.DataContext>
    <Grid>
        <Image Source="\res\img\login.jpg"/>
        <Grid Background="White" Margin="408,283,408,282">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Tytuł -->
            <TextBlock Text="Zaloguj się" HorizontalAlignment="Center" FontSize="35" Foreground="Purple" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,20"/>

            <!-- Login Label -->
            <TextBlock Text="Login" Grid.Row="1" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Width="400" Height="25" Margin="100,10" HorizontalAlignment="Left"/>

            <!-- Password Label -->
            <TextBlock Text="Hasło" Grid.Row="2" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="2" Width="400" Height="25" Margin="100,10" HorizontalAlignment="Left" PasswordChanged="PasswordBox_PasswordChanged"/>

            <!-- Rejestracja Button -->
            <Button Content="Zarejestruj się" Command="{Binding RegisterCommand}" Foreground="Blue" Background="Transparent"
                    FontSize="13" FontStyle="Italic" BorderThickness="0" Grid.Row="3" Margin="100,10" HorizontalAlignment="Left"/>

            <!-- Login Button -->
            <Button Content="Zaloguj się" Command="{Binding LoginCommand}" Grid.Row="3" Margin="300,10" HorizontalAlignment="Left" Background="LightGreen" Width="100"/>
        </Grid>
    </Grid>
</Page>
