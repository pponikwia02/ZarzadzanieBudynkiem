<Page x:Class="IO.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IO"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1600"
      Title="LoginPage">

    <Grid>
        <Image Source="\res\img\login.jpg"></Image>
        <Grid Background="White" Margin="408,283,408,282">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- tekst zaloguj sie -->
            <TextBlock 
                x:Name="NZaloguj"
                Text="Zaloguj sie"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="35"
                Foreground="Purple"
                Height="50" 
                Width="180"
                Margin="0,36,0,0"
                Grid.Row="4"
                Grid.ColumnSpan="2"/>

            <!-- logowanie -->
            <TextBlock 
                Grid.Row="4"
                Text="login"
                Margin="191,149,-91,267"
                FontSize="14"
                Grid.ColumnSpan="2"/>
            <TextBox
                x:Name="Login_Box"
                Text="Username"
                Grid.Row="4"
                Width="400"
                Height="20"
                Margin="0,173,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.ColumnSpan="2"/>
            <TextBlock
                Grid.Row="4"
                Text="hasło"
                Margin="191,230,-91,185"
                FontSize="14"
                Grid.ColumnSpan="2"/>
            <PasswordBox 
                x:Name="Password_Box"
                Grid.Row="4"
                Width="400"
                Height="20"
                Margin="0,255,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="2"
                />

            <!-- przycisk zarejestruj sie -->
            <Button 
                x:Name="Rejestracja_Btn"
                Grid.Row="4"
                BorderThickness="0"
                Content="Zarejestruj się"
                Foreground="Blue"
                Background="Transparent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="13"
                FontStyle="Italic"
                Click="Rejestracja_Btn_MouseDown"
                Margin="352,308,0,0"
                Grid.ColumnSpan="2"/>

            <!-- przycisk zaloguj sie -->
            <Button
                x:Name="Log_In_Btn"
                Grid.Row="4"
                Margin="122,306,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Zaloguj sie"
                Background="LightGreen"
                Width="78"
                Click="Log_In_Btn_Click"
                Height="23" Grid.Column="1"
                />
        </Grid>
    </Grid>
</Page>
