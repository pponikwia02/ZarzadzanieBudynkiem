<Page x:Class="IO.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegistrationPage"
      Width="1600" Height="1000">

    <Grid>
        <Image Source="/res/img/login.jpg" Stretch="UniformToFill"/>
        <Grid Background="White" Margin="408,282,408,282">


            <TextBlock Text="Stwórz konto"  FontSize="35" Foreground="Purple" HorizontalAlignment="Left" Margin="267,20,0,363"/>
            <TextBlock Text="Typ konta:" FontSize="14" Margin="228,102,487,312"/>
            <!-- Pole wyboru typu użytkownika -->
            <StackPanel  Margin="264,101,312,277" RenderTransformOrigin="0.509,0.539">
                <ComboBox x:Name="UserTypeComboBox" 
                          Width="113" 
                          SelectedIndex="0" Height="30">
                    <ComboBoxItem Content="Wykładowca"/>
                    <ComboBoxItem Content="Administrator"/>
                </ComboBox>
            </StackPanel>

            <!-- Reszta formularza pozostaje bez zmian -->
            <TextBlock Text="Podaj login:" FontSize="14" Margin="192,146,520,264"/>
            <TextBox x:Name="Login_Box"  Width="400" Height="20" Margin="192,308,192,108"/>

            <TextBlock Text="Podaj hasło:"  FontSize="14" Margin="192,214,520,203"/>
            <PasswordBox x:Name="Password_Box"  Width="400" Height="20" Margin="192,238,192,178"/>

            <TextBlock Text="Powtórz hasło:"  FontSize="14" Margin="192,284,503,133"/>
            <PasswordBox x:Name="Password_Box_Repeat"  Width="400" Height="20" Margin="192,172,192,244"/>

            <Button x:Name="Reg_Btn"  Content="Zarejestruj się" Margin="341,348,341,64" Click="Reg_Btn_Click"/>
        </Grid>
    </Grid>
</Page>