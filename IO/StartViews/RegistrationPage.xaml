<Page x:Class="IO.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Image Source="/res/img/login.jpg"></Image>
        <Grid Background="White" Margin="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="NRejestracja"
                    Text="Stwórz konto" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontSize="35"
                    Foreground="Purple"
                    Height="50"
                    Width="200"/>
            <TextBlock Grid.Row="1"
                    Text="Podaj login(e-mail)"
                    Margin="100,0,0,0"
                    FontSize="14"/>
            <TextBox x:Name="Login_Box"
                  Grid.Row="1"
                  Width="400"
                  Height="20"
                 Margin="30,20,30,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2"
        Text="Podaj hasło"
        Margin="100,0,0,0"
        FontSize="14"/>
            <PasswordBox x:Name="Password_Box"
                      Grid.Row="2"
                      Width="400"
                      Height="20"
                      Margin="30,20,30,0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="3"
Text="Powtórz hasło"
Margin="100,0,0,0"
FontSize="14"/>
            <PasswordBox x:Name="Password_Box_Repeat"
              Grid.Row="3"
              Width="400"
              Height="20"
              Margin="30,20,30,0"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"/>

            <Button x:Name="Reg_Btn"
                 Grid.Row="4"
                 Margin="20"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Content="Zarejestruj się"
                 Background="AliceBlue"
                 Width="400"
                    Click="Reg_Btn_Click"
                 Height="20"/>s
        </Grid>
    </Grid>
</Page>
